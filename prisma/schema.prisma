generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  address  String
  password String

  createdAt DateTime  @default(now())
  // relations
  auctions  Auction[] @relation("UserAuctions")
  bids      Bid[]     @relation("UserBids")
  winners   Auction[] @relation("UserAuctionsWinner")
}

model Auction {
  id          String   @id @default(uuid())
  title       String
  description String?
  endsAt      DateTime
  createdAt   DateTime @default(now())
  closed      Boolean  @default(false)

  // relations
  ownerId  String
  winnerId String?
  owner    User    @relation("UserAuctions", fields: [ownerId], references: [id])
  winner   User?   @relation("UserAuctionsWinner", fields: [winnerId], references: [id])
  bids     Bid[]   @relation("AuctionBids")
}

model Bid {
  id        String   @id @default(uuid())
  amount    Decimal
  createdAt DateTime @default(now())

  // relations
  auctionId String
  auction   Auction @relation("AuctionBids", fields: [auctionId], references: [id])

  bidderId String
  bidder   User   @relation("UserBids", fields: [bidderId], references: [id])
}
