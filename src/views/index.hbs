<!-- Stats Row -->
<div class="grid grid-cols-5 gap-6">
    <div class="p-4 rounded shadow bg-blue-500">
        <p class="text-sm text-white">Total Auctions</p>
        <p class="text-xl font-bold text-white">{{stat.totalAuctions}}</p>
    </div>
    <div class="p-4 bg-purple-500 rounded shadow">
        <p class="text-sm text-white">My Auctions</p>
        <p class="text-xl font-bold text-white">{{stat.myAuctions}}</p>
    </div>
    <div class="p-4 bg-green-500 rounded shadow">
        <p class="text-sm text-white">Highest Bidded</p>
        <p class="text-xl font-bold text-white">₦{{amount stat.hb}}</p>
    </div>
    <div class="p-4 bg-orange-500 rounded shadow">
        <p class="text-sm text-white">My Highest Bid</p>
        <p class="text-xl font-bold text-white">₦{{amount stat.mhb}}</p>
    </div>
    <div class="p-4 bg-red-500 rounded shadow">
        <p class="text-sm text-white">Lowest Winner Bid</p>
        <p class="text-xl font-bold text-white">₦{{amount stat.lwb}}</p>
    </div>
</div>

<!-- Main Grid -->
<div class="grid grid-cols-3 gap-6 pb-6 mt-4">
    <!-- Left Column (2/3) -->
    <div class="col-span-2 space-y-6">
        <!-- Income/Expense Chart -->
        <div class="p-6 bg-white rounded shadow">
            <h2 class="text-lg font-semibold mb-4">Win/Loss Ratio</h2>
            <div class="flex justify-center">
                <canvas id="winLossChart" class="w-64 h-64"></canvas>
            </div>

        </div>

        <!-- Top Table -->
        <div class="p-6 bg-white rounded shadow">
            <h3 class="text-lg font-semibold mb-4">My Bids</h3>
            <table class="w-full text-sm text-left">
                <thead class="text-gray-500">
                    <tr>
                        <th class="py-2">Auction</th>
                        <th>Amount</th>
                        <th>High Bid</th>
                        <th>Status</th>
                        <th>Winner</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each stat.myBids}}
                    <tr class="border-t">
                        <td class="py-2 flex items-center space-x-2">
                            <div class="h-5 w-5 bg-gray-300 rounded-full"></div>
                            <span>{{this.title}}</span>
                        </td>
                        <td>₦{{amount this.myAmount}}</td>
                        <td>₦{{amount this.maxBid}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.winnerName}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Right Column (1/3) -->
    <div class="space-y-6">
        <!-- Where your money go -->
        <div class="p-6 bg-white rounded shadow">
            <h3 class="font-semibold mb-4">Top bidders</h3>
            <ul class="space-y-2 text-sm">
                {{#each stat.topBids}}
                <li class="flex justify-between">
                    <span>{{this.title}}</span><span>₦{{amount this.amount}}</span>
                </li>
                {{/each}}

            </ul>
        </div>

        <!-- Tips Card -->
        <div id="stats" data-wins="{{stats.wins}}" data-losses="{{stats.losses}}">
        </div>
        <div class="p-6 bg-white rounded shadow text-center">
            <!-- Profile Avatar Placeholder -->
            <div class="h-24 w-24 mx-auto max-w-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                <span class="text-gray-400 text-xl font-bold">
                    {{user.name.[0]}}
                </span>
            </div>

            <!-- User Details -->
            <h3 class="font-semibold text-lg">{{user.name}}</h3>
            <p class="text-sm text-gray-500 mb-2">{{user.email}}</p>
            <p class="text-sm text-gray-400">{{user.address}}</p>
        </div>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<canvas id="winLossChart" class="w-full max-w-md mx-auto"></canvas>

<script>
    const statsEl = document.getElementById("stats");
    const wins = parseInt(statsEl.dataset.wins, 10);
    const losses = parseInt(statsEl.dataset.losses, 10);

    const ctx = document.getElementById("winLossChart").getContext("2d");
    new Chart(ctx, {
        type: "doughnut",
        data: {
            labels: ["Wins", "Losses"],
            datasets: [{
                data: [wins, losses],
                backgroundColor: ["#22c55e", "#ef4444"],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: "bottom" }
            }
        }
    });
</script>